{
  "extends": [
    "standard",
    "plugin:flowtype/recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/standard"
  ],
  "plugins": ["flowtype", "prettier", "standard"],
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "printWidth": 80,
        "tabWidth": 2,
        "parser": "flow",
        "trailingComma": "none",
        "jsxBracketSameLine": false
      }
    ]
  }
}
