{
  "extends": [
    "standard",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/@typescript-eslint",
    "prettier/standard"
  ],
  "plugins": ["@typescript-eslint", "prettier", "standard"],
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "printWidth": 80,
        "tabWidth": 2,
        "parser": "typescript",
        "trailingComma": "none",
        "jsxBracketSameLine": false
      }
    ],
    "no-console": "off"
  }
}
