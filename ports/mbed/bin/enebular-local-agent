#!/usr/bin/env node
var agent = require('..')

async function exit() {
  await agent.shutdown()
  process.exit(0)
}

process.on('SIGINT', () => {
  exit()
})
process.on('SIGTERM', () => {
  exit()
})
process.on('uncaughtException', err => {
  console.error(`Uncaught exception: ${err.stack}`)
  process.exit(1)
})

agent.startup().then(ret => {
  if (!ret) {
    process.exit(1)
  }
}).catch(err => {
  console.error(`Agent startup failed: ${err}`)
  process.exit(1)
})
